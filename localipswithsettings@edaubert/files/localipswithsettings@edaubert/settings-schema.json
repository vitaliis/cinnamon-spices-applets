{
  "refreshInterval":
  { "type": "spinbutton"
  , "default": 60
  , "min": 30
  , "max": 3600
  , "units": "seconds"
  , "step": 5
  , "description": "Update interval"
  }

, "IPv4":
  { "type": "checkbox"
  , "default": true
  , "description": "Display IPv4 information"
  }

, "IPv6":
  { "type": "checkbox"
  , "default": true
  , "description": "Display IPv6 information"
  }

, "inet":
  { "type": "entry"
  , "default": "eth0,wlan0"
  , "description": "List all interfaces we want to display.\nSeparated by comma.\nRegex is accepted (usefull to list all docker interfaces for example)"
  }
, "debug": 
  { "type": "checkbox"
  , "default": false
  , "description": "Activate/Deactivate the logs"
  }
}
