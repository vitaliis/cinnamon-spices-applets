{    
    "warning_days": {
        "type": "scale",
        "default": 5,
        "min": 1,
        "max": 60,
        "step": 1,
        "description": "Warning after days:  "
    },

    "error_days": {
        "type": "scale",
        "default": 8,
        "min": 1,
        "max": 365,
        "step": 1,
        "description": "Error after days:  "
    },
      
    "refresh_int": {
        "type": "scale",
        "default": 2,
        "min": 1,
        "max": 3600,
        "step": 1,
        "description": "Refresh interval (min):  "
    },
    
    "log_file" : {
        "type" : "filechooser",
        "description" : "Log file ",
        "default" : "~/rsync.log",
        "select-dir" : false
    },
    
    "id_string" : {
        "type" : "entry",
        "description" : "String to be searched for ",
        "default" : "total size is",
        "tooltip" : "Set the string that will be searched for in your log file, to determine the last good back-up"
    }    
}
